{
   "name": "nova-form",
   "version": "0.1.0",
   "private": true,
   "scripts": {
      "dev": "blitz dev",
      "build": "blitz build",
      "start": "yarn build && blitz start",
      "studio": "blitz prisma studio",
      "migrate": "blitz prisma migrate dev",
      "console": "blitz console",
      "seed": "blitz db seed",
      "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
      "prepare": "husky install",
      "release": "standard-version -n",
      "release:beta": "standard-version -n --prerelease beta"
   },
   "prisma": {
      "schema": "db/schema.prisma"
   },
   "lint-staged": {
      "*.{ts,tsx}": [
         "eslint --fix"
      ],
      "*.{ts,tsx,json,prisma,md}": [
         "prettier --write"
      ]
   },
   "dependencies": {
      "@chakra-ui/react": "1.6.7",
      "@emotion/react": "11",
      "@hookform/resolvers": "2.8.0",
      "@prisma/client": "2.30.3",
      "blitz": "0.39.0",
      "react": "alpha",
      "react-dom": "alpha",
      "react-hook-form": "7.15.0",
      "zod": "3.8.2"
   },
   "devDependencies": {
      "@types/react": "17.0.20",
      "eslint": "7.32.0",
      "faker": "5.5.3",
      "husky": "6.0.0",
      "lint-staged": "10.5.4",
      "prettier": "2.3.2",
      "prettier-plugin-prisma": "0.15.0",
      "prisma": "2.30.3",
      "standard-version": "9.3.1",
      "typescript": "~4.3"
   }
}
