{
   "name": "nova-form",
   "version": "0.4.0",
   "private": true,
   "scripts": {
      "dev": "blitz dev",
      "build": "cross-env NODE_ENV=production blitz build && yarn migrate:prod",
      "start": "blitz start",
      "build:dev": "blitz build",
      "prod": "yarn build:dev && yarn start -p 5000",
      "premigrate": "blitz prisma migrate reset --force",
      "migrate": "blitz prisma migrate dev",
      "postmigrate": "yarn db:seed",
      "migrate:prod": "blitz prisma migrate deploy",
      "db:seed": "blitz db seed",
      "db:studio": "blitz prisma studio",
      "db:console": "blitz console",
      "type": "tsc",
      "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
      "prepare": "husky install",
      "release": "standard-version -n"
   },
   "prisma": {
      "schema": "db/schema.prisma"
   },
   "lint-staged": {
      "*.{ts,tsx}": [
         "eslint --fix"
      ],
      "*.{ts,tsx,json,prisma,md}": [
         "prettier --write"
      ]
   },
   "dependencies": {
      "@chakra-ui/react": "1.6.7",
      "@emotion/react": "11",
      "@emotion/styled": "^11",
      "@hookform/resolvers": "2.8.0",
      "@prisma/client": "2.30.3",
      "blitz": "0.39.0",
      "framer-motion": "^4",
      "react": "alpha",
      "react-dom": "alpha",
      "react-hook-form": "7.15.0",
      "react-icons": "4.3.1",
      "react-use": "17.3.1",
      "string-sanitizer": "2.0.2",
      "zod": "3.8.2"
   },
   "devDependencies": {
      "@types/faker": "5.5.8",
      "@types/react": "17.0.20",
      "cross-env": "7.0.3",
      "eslint": "7.32.0",
      "faker": "5.5.3",
      "husky": "6.0.0",
      "lint-staged": "10.5.4",
      "prettier": "2.3.2",
      "prettier-plugin-prisma": "0.15.0",
      "prisma": "2.30.3",
      "standard-version": "9.3.1",
      "typescript": "~4.3"
   }
}
